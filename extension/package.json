{
  "name": "positron-tutorial-helpers",
  "displayName": "Positron Tutorial Helpers",
  "description": "Insert tutorial exercises in Positron using the tutorial.helpers R package and browse/run installed learnr tutorials",
  "version": "0.1.0",
  "publisher": "anishtalla",
  "engines": { "vscode": ">=1.99.0" },
  "categories": ["Other"],
  "keywords": ["r", "positron", "tutorial", "exercise", "rmarkdown", "learnr"],
  "repository": {
    "type": "git",
    "url": "https://github.com/anishtalla27/tutorial.helpers"
  },
  "bugs": {
    "url": "https://github.com/anishtalla27/tutorial.helpers/issues"
  },
  "license": "MIT",
  "main": "./dist/extension.js",

  "activationEvents": [
    "onStartupFinished",
    "onLanguage:r", 
    "onCommand:makeExercise.code",
    "onCommand:makeExercise.no",
    "onCommand:makeExercise.yes",
    "onCommand:makeExercise.pick",
    "onView:tutorialHelpers.tutorialPane",
    "onCommand:tutorialHelpers.showPane"
  ],

  "contributes": {
    "commands": [
      { "command": "makeExercise.code", "title": "Insert Exercise: code" },
      { "command": "makeExercise.no", "title": "Insert Exercise: no-answer" },
      { "command": "makeExercise.yes", "title": "Insert Exercise: yes-answer" },
      { "command": "makeExercise.pick", "title": "Insert Exercise (choose type)" },
      { "command": "tutorialHelpers.showPane", "title": "Tutorials: Show Pane" }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tutorialHelpers",
          "title": "Tutorials",
          "icon": "media/book.svg"
        }
      ]
    },
    "views": {
      "tutorialHelpers": [
        {
          "id": "tutorialHelpers.tutorialPane",
          "name": "Installed Tutorials",
          "type": "webview"
        }
      ]
    }
  },

  "scripts": {
    "clean": "rimraf dist out", 
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.17.1",
    "@types/vscode": "1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "rimraf": "^6.0.1" 
  },

  "dependencies": {
    "@posit-dev/positron": "^0.1.8"
  }
}

